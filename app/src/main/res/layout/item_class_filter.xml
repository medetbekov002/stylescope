<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_txt">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_tv_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="14dp"
        app:layout_constraintEnd_toStartOf="@id/item_img_close"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Classes" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_classes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_tv_classes"
        app:layout_constraintTop_toTopOf="@id/item_tv_classes" />
</androidx.constraintlayout.widget.ConstraintLayout>